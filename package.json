{
  "name": "pljscorner",
  "version": "1.0.0",
  "description": "Point of sales",
  "main": "server.js",
  "scripts": {
    "start": "node dist/server.js",
    "server": "nodemon src/server.ts",
    "build": "tsc -p .",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
